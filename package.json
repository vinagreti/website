{
  "name": "BrunoJoao",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build-prod": "ng build --prod && npm run create-404 && npm run sw",
    "e2e": "ng e2e",
    "lint": "ng lint",
    "sw": "sw-precache --root=dist --config=sw-precache-config.js",
    "test": "ng test",
    "build-firebase": "ng build --prod --app 1 && npm run universal-funtions && npm run copy-index && npm run copy-function && npm run drop-hash",
    "universal-funtions": "tsc -p server/tsconfig.functions.json",
    "copy-index": "cp src/index.html functions/dist-server/",
    "copy-function": "cp src/app-theme.scss functions/dist-server/",
    "drop-hash": "mv functions/dist-server/main.*.bundle.js functions/dist-server/main.bundle.js",
    "build-ghpage": "ng build --prod --base-href=https://vinagreti.github.io/ && npm run create-404 && npm run sw",
    "create-404": "cp dist/index.html dist/404.html",
    "dep:fn": "firebase serve --only functions",
    "dist": "cd dist && live-server --port=4200 --host=0.0.0.0 --entry-file=/index.html"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.2",
    "@angular/cdk": "^5.0.0-rc.2",
    "@angular/common": "^5.0.2",
    "@angular/compiler": "^5.0.2",
    "@angular/core": "^5.0.2",
    "@angular/flex-layout": "2.0.0-beta.10-4905443",
    "@angular/forms": "^5.0.2",
    "@angular/http": "^5.0.2",
    "@angular/material": "^5.0.0-rc.2",
    "@angular/platform-browser": "^5.0.2",
    "@angular/platform-browser-dynamic": "^5.0.2",
    "@angular/platform-server": "^5.0.3",
    "@angular/router": "^5.0.2",
    "@tzd/angular-textarea-resize": "^5.0.0",
    "core-js": "^2.4.1",
    "firebase": "^4.6.2",
    "font-awesome": "^4.7.0",
    "g": "^2.0.1",
    "http": "0.0.0",
    "live-server": "^1.2.0",
    "rxjs": "^5.5.2",
    "sw-precache": "^5.2.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.2",
    "@angular/compiler-cli": "^5.0.2",
    "@angular/language-service": "^5.0.2",
    "@types/jasmine": "^2.8.2",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^8.0.53",
    "codelyzer": "^4.0.1",
    "jasmine-core": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "^5.2.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.4.2"
  }
}
